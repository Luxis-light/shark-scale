<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="demoprasenatationslayer.WalletViewController">
    <children>
        <TabPane layoutX="14.0" layoutY="14.0" prefHeight="372.0" prefWidth="572.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Wallet Übersicht">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Label layoutX="14.0" layoutY="25.0" text="Wallet 1 Adresse:"/>
                                <TextField fx:id="wallet1AddressField" editable="false" layoutX="130.0" layoutY="21.0"
                                           prefWidth="420.0"/>
                                <Label layoutX="14.0" layoutY="60.0" text="Wallet 1 Guthaben:"/>
                                <TextField fx:id="wallet1BalanceField" editable="false" layoutX="130.0" layoutY="56.0"
                                           prefWidth="420.0"/>
                                <Separator layoutX="14.0" layoutY="100.0" prefWidth="540.0"/>
                                <Label layoutX="14.0" layoutY="125.0" text="Wallet 2 Adresse:"/>
                                <TextField fx:id="wallet2AddressField" editable="false" layoutX="130.0" layoutY="121.0"
                                           prefWidth="420.0"/>
                                <Label layoutX="14.0" layoutY="160.0" text="Wallet 2 Guthaben:"/>
                                <TextField fx:id="wallet2BalanceField" editable="false" layoutX="130.0" layoutY="156.0"
                                           prefWidth="420.0"/>
                                <Button fx:id="loadWalletsButton" layoutX="14.0" layoutY="200.0" onAction="#loadWallets"
                                        text="Wallets laden"/>
                                <Button fx:id="refreshBalanceButton" layoutX="130.0" layoutY="200.0"
                                        onAction="#refreshBalances" text="Guthaben aktualisieren"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Transaktion erstellen">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Label layoutX="25.0" layoutY="30.0" text="Von (Sender):"/>
                                <ComboBox fx:id="senderComboBox" layoutX="150.0" layoutY="26.0" prefWidth="150.0"/>
                                <Label layoutX="25.0" layoutY="70.0" text="An (Empfänger):"/>
                                <TextField fx:id="recipientAddressField" editable="false" layoutX="150.0" layoutY="66.0"
                                           prefWidth="350.0"/>
                                <Label layoutX="25.0" layoutY="110.0" text="Betrag (in Wei):"/>
                                <TextField fx:id="amountField" layoutX="150.0" layoutY="106.0" text="10000000000000"/>
                                <Button fx:id="createTransactionButton" layoutX="25.0" layoutY="150.0"
                                        onAction="#createTransaction" text="Transaktion erstellen &amp; signieren"/>
                                <Label layoutX="25.0" layoutY="200.0" text="Status:"/>
                                <Label fx:id="statusLabel" layoutX="150.0" layoutY="200.0" text="-"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Ausstehende Transaktionen">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <TableView fx:id="transactionTableView" layoutX="14.0" layoutY="14.0" prefHeight="250.0"
                                           prefWidth="545.0">
                                    <columns>
                                        <TableColumn prefWidth="75.0" text="Nonce"/>
                                        <TableColumn prefWidth="150.0" text="Empfänger"/>
                                        <TableColumn prefWidth="120.0" text="Wert (Wei)"/>
                                        <TableColumn prefWidth="200.0" text="Signierter Hash (gekürzt)"/>
                                    </columns>
                                </TableView>
                                <Button fx:id="sendBatchButton" layoutX="14.0" layoutY="280.0"
                                        onAction="#sendTransactionBatch" text="Alle Transaktionen senden"/>
                                <Button fx:id="saveTxButton" layoutX="200.0" layoutY="280.0"
                                        onAction="#saveTransactions" text="Transaktionen speichern"/>
                                <Button fx:id="loadTxButton" layoutX="380.0" layoutY="280.0"
                                        onAction="#loadTransactions" text="Transaktionen laden"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>